{
    "manifest_version": 2,
    "name": "ShowTracker",
    "description": "Track your movies and TV shows.",
    "version": "0.1",
    "author": "Jasmin Bektic",       
    "browser_action": {
        "default_icon": {                   
            "16": "icon.png",          
            "24": "icon.png",          
            "32": "icon.png"            
        },
        "default_title": "Show Tracker",
        "default_popup": "src/html/index.html"
    },
    "background": {
        "scripts": [
            "src/js/globals.js",
            "src/js/modules/storage.js",
            "src/js/modules/api.js",
            "src/js/sync.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://www.imdb.com/title/tt*"],
            "run_at": "document_idle",
            "css": ["src/css/imdb.css"],
            "js": [
                "src/js/globals.js",
                "src/js/modules/storage.js",
                "src/js/modules/dom.js",
                "src/js/modules/api.js",
                "src/js/imdb.js" 
            ]
        }
    ],
    "chrome_url_overrides" : {},
    "permissions": [
        "activeTab", 
        "declarativeContent", 
        "storage"
    ]
}